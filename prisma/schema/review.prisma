/// =======================
/// REVIEW
/// =======================

model Review {
    id     String @id @default(uuid())
    mealId String
    userId String

    rating  Int
    comment String?

    user User @relation(fields: [userId], references: [id])
    meal Meal @relation(fields: [mealId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())

    @@unique([mealId, userId])
}
